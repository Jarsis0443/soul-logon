<!DOCTYPE html>
<html lang="en" style="background-color: rgba(0,0,0,0.0); width:100%; height: 100%;">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GrowSoul Dashboard Support</title>
    <link rel="icon" type="image/png" href="https://s3.eu-west-1.amazonaws.com/cdn.growtopiagame.com/website/resources/assets/images/growtopia.ico" sizes="16x16">
    <link rel="shortcut icon" href="https://s3.eu-west-1.amazonaws.com/cdn.growtopiagame.com/website/resources/assets/images/growtopia.ico" type="image/x-icon">
    <link media="all" rel="stylesheet" href="https://s3.eu-west-1.amazonaws.com/cdn.growtopiagame.com/website/resources/assets/css/shop-custom.css">
    <link media="all" rel="stylesheet" href="https://s3.eu-west-1.amazonaws.com/cdn.growtopiagame.com/website/resources/assets/css/ingame-custom.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
        }
        .login-container {
            background-color: #2b4d6d;
            border: 4px solid #87b8cc;
            border-radius: 12px;
            box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
            padding: 40px 50px;
            width: 40vw; /* Mengatur lebar kontainer menjadi 40% dari lebar layar */
            max-width: 600px; /* Setel lebar maksimal agar tidak terlalu besar */
            text-align: center;
            transform: scale(1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        .login-container:hover {
            transform: scale(1.05);
            box-shadow: 0 6px 50px rgba(0, 0, 0, 0.2);
        }
        .login-container p {
            color: white;
            font-size: 24px;
            font-weight: bold;
        }
        .login-container .instruction-text {
            color: #f0f0f0;
            font-size: 12px;
            margin-top: 15px;
            font-style: italic;
        }
        .login-container .spacer {
            margin: 20px 0;
        }
        .error-message {
            opacity: 0;
            transition: opacity 0.3s ease-in-out;
        }
        .error-message.show {
            opacity: 1;
        }
        .input-group {
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            border-radius: 8px;
            border: 2px solid #81d4fa;
            background-color: #2b4d6d;
            transition: all 0.3s ease-in-out;
        }
        .input-group:focus-within {
            border-color: #00b8ff;
            box-shadow: 0 0 10px rgba(0, 184, 255, 0.7);
        }
        .input-group input {
            width: 100%;
            padding: 12px;
            background-color: #2b4d6d;
            color: white;
            border: none;
            font-size: 14px;
            outline: none;
        }
        .input-group i {
            color: #ffffff;
        }
        .input-group input::placeholder {
            color: #ffffff;
            font-style: italic;
        }
        .btn-login {
            background-color: #00b8ff;
            color: white;
            padding: 12px 20px;
            font-size: 14px;
            border-radius: 8px;
            cursor: pointer;
            width: 100%;
            transition: all 0.3s ease;
        }
        .btn-login:hover {
            background-color: #06a4dd;
            transform: scale(1.1);
        }
        .btn-login:active {
            transform: scale(0.95);
        }
        .toggle-password {
            color: white;
            cursor: pointer;
            font-size: 16px;
        }
    </style>
</head>
<body style="background-color: rgba(0,0,0,0.0);>
    <div class="flex justify-center items-center w-full h-full">
        <div class="login-container">
            <p style="display: inline-flex; align-items: center; justify-content: center;">
                <img src="https://s3.eu-west-1.amazonaws.com/cdn.growtopiagame.com/website/resources/assets/images/growtopia.ico" 
                     alt="Growtopia Icon" 
                     style="width: 32px; height: 32px; vertical-align: middle; margin-right: 8px;">
                Login to Growtopia
            </p>
            <div class="spacer"></div>
            <div class="instruction-text">
                If you don't have an account and want to create one, please leave the input fields empty.
            </div>
            <div id="errorDiv" class="error-message">
                <p id="errorMessage" class="text-red-700 font-bold"></p>
            </div>
            <div class="spacer"></div>
            <form id="loginForm" action="/player/growid/login/validate" method="post">
                <input name="type" value="log" type="hidden" />
                <input name="_token" type="hidden" value="">
                <div class="input-group">
                    <i class="fas fa-user mr-2"></i>
                    <input type="text" name="growId" id="loginGrowId" placeholder="Enter your GrowID" required>
                </div>
                <div class="input-group">
                    <i class="fas fa-lock mr-2"></i>
                    <input type="password" name="password" id="loginPassword" placeholder="Enter your Password" required>
                    <span id="toggleLogPassword" class="toggle-password">
                        <i class="fas fa-eye"></i>
                    </span>
                </div>
                <div class="form-group">
                    <small>Create account? Enter Name without Password &amp; Log In!</small>
                </div>
                <div id="errorDiv" class="error-message">
                    <p id="errorMessage" class="text-red-700 font-bold"></p>
                </div>
                <div class="spacer"></div>
                <button type="submit" class="btn-login" id="loginButton">Login</button>
            </form>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            if (localStorage.getItem('growId')) {

            }

            document.getElementById('loginButton').addEventListener('click', function (event) {
                event.preventDefault();
                const uName = document.getElementById('loginGrowId').value;
                const uPass = document.getElementById('loginPassword').value;
                const errorDiv = document.getElementById('errorDiv');
                const errorMessage = document.getElementById('errorMessage');

                if (!uName || !uPass) {
                    errorDiv.classList.add('show');
                    errorMessage.textContent = 'Username or Password is empty';
                    return;
                } else if (uName.length < 4 || uPass.length < 4) {
                    errorDiv.classList.add('show');
                    errorMessage.textContent = 'Username or Password must be at least 4 characters long';
                    return;
                } else {
                    errorDiv.classList.remove('show');
                    document.getElementById('loginForm').submit();
                    localStorage.setItem('growId', uName);
                }
            });

            document.getElementById('toggleLogPassword').addEventListener('click', function () {
                const LpasswordField = document.getElementById('loginPassword');
                const LpasswordFieldType = LpasswordField.getAttribute('type');
                if (LpasswordFieldType === 'password') {
                    LpasswordField.setAttribute('type', 'text');
                    this.innerHTML = '<i class="fas fa-eye-slash"></i>';
                } else {
                    LpasswordField.setAttribute('type', 'password');
                    this.innerHTML = '<i class="fas fa-eye"></i>';
                }
            });
        });
    </script>
</body>
</html>
